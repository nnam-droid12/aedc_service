{
  "name": "aedc-services",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "ts-node-esm ./src/index.ts | pino-pretty",
    "dev": "nodemon --exec node --env-file=.env.development --loader ts-node/esm src/index.ts",
    "local": "nodemon --exec node --env-file=.env.local --loader ts-node/esm src/index.ts",
    "production": "nodemon --exec node --env-file=.env.production --loader ts-node/esm src/index.ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "lint-fix": "eslint --ignore-path .eslintignore --ext .js,.ts . --fix",
    "format": "npx prettier --write .",
    "prepare": "husky && husky install"
  },
  "keywords": [],
  "author": "kadismile",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hapi__joi": "^17.1.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/nodemailer": "^6.4.15",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "body-parser": "^1.20.2",
    "eslint": "^8.39.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "express": "^4.19.2",
    "globals": "^15.8.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.4",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.17.0"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "handlebars": "^4.7.8",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.8.0",
    "mongoose": "^8.5.1",
    "nodemailer": "^6.9.14",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "npm run lint-fix",
      "npm run format"
    ]
  }
}
